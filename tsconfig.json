{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@internetarchive-sdk-js": ["./src"],
    }
  },
  "include": ["src/**/*.js", "src/**/*.ts", "examples/**/*.js", "examples/**/*.ts", "**/eslint.config.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist", "docs"]
}
